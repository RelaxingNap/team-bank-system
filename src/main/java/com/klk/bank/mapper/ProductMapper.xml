<mapper namespace="com.klk.bank.mapper.ProductMapper">

	<select id="selectProductAll" resultType="com.klk.bank.domain.ProductDto">
		SELECT p.id,
			   p.item_name,
			   p.summary,
			   p.sav_method,
			   p.rate,
			   p.exp_period,
			   p.date
		FROM Product p		
		WHERE 1 = 1		
		
		<!-- 검색 키워드 옵션 -->
		<if test="keyword != '%%'">
			AND p.item_name LIKE #{keyword }			
		</if>
		
		<!-- 상품 종류 옵션 -->
		<if test="sav_method != ''">
			AND p.sav_method = #{sav_method}
		</if>
		
		<!-- 가입기간 옵션 -->		
		<if test="exp_period == 'period1'">	
			<![CDATA[
				AND p.exp_period < 12		
			]]>	
		</if>
		<if test="exp_period == 'period2'">	
			<![CDATA[
				AND p.exp_period >= 12
				AND p.exp_period < 24				  		
			]]>	
		</if>
		<if test="exp_period == 'period3'">	
			<![CDATA[
				AND p.exp_period >= 24
				AND p.exp_period < 36		  		
			]]>	
		</if>
		<if test="exp_period == 'period4'">	
			<![CDATA[
				AND p.exp_period >= 36				  		
			]]>	
		</if>
		
		<!-- 이율 옵션 -->
		<if test="rate == 'rate1'">	
			<![CDATA[
				AND p.rate <= 0.02		
			]]>	
		</if>
		<if test="rate == 'rate2'">	
			<![CDATA[
				AND p.rate > 0.02
				AND p.rate <= 0.035				  		
			]]>	
		</if>
		<if test="rate == 'rate3'">	
			<![CDATA[
				AND p.rate > 0.035				  		
			]]>	
		</if>		
			
		GROUP BY p.id
		ORDER BY p.id DESC
	</select>	
	
	<insert id="insertProduct" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
		INSERT INTO Product (item_name, summary, sav_method, exp_period, rate, detail)
		VALUES (#{item_name}, #{summary}, #{sav_method}, #{exp_period}, #{rate}, #{detail})
	</insert>
	
	<select id="selectProductById" resultType="com.klk.bank.domain.ProductDto">
		SELECT p.id,
			   p.item_name,
			   p.summary,
			   p.sav_method,
			   p.rate,
			   p.exp_period,
			   p.detail,			  
			   p.date			   
		FROM Product p
		WHERE p.id = #{id}
	</select>

	<update id="updateProduct">
		UPDATE Product
		SET item_name = #{item_name},
			  summary = #{summary},
		   sav_method = #{sav_method},
		   exp_period = #{exp_period},
		   		 rate = #{rate},
			   detail = #{detail}
		WHERE id = #{id}
	</update>
	
	<delete id="deleteProduct">
		DELETE FROM Product
		WHERE id = #{id}
	</delete>
	
